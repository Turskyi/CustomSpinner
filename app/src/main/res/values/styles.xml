<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BtnLanguageStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">@dimen/size_btn_language</item>
        <item name="android:layout_height">@dimen/size_btn_language</item>
        <item name="android:background">@drawable/selector_btn_language</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/subtitle1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:layout_width">@dimen/size_btn_language</item>
        <item name="android:dropDownWidth">@dimen/size_btn_language</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/offset20</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginEnd">@dimen/offset20</item>
        <item name="android:layout_marginTop">@dimen/offset52</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

</resources>